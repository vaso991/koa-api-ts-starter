{
    "version": "2.0.2",
    "compilerOptions": {
      "outDir": "./dist",
      "lib": ["es5", "es6"],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      "allowJs": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "declaration": false,
      "isolatedModules": false,
      "suppressImplicitAnyIndexErrors": false,
      "noImplicitAny": true,
      "strict": true,
      "strictPropertyInitialization": false,
      "allowSyntheticDefaultImports": true,
      "newLine": "LF",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "typeRoots": [
        "./node_modules/@types"
      ]
    },
    "include": [
      "./src/**/*",
      ".eslintrc.js",
      "knexfile.ts",
      "esbuild.config.js"
    ],
    "linterOptions": {
      "exclude": []
    }
  }